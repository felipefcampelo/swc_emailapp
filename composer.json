{
    "require": {
        "shardj/zf1-future": "^1.22",
        "robmorgan/phinx": "^0.13.4",
        "vlucas/phpdotenv": "^5.5"
    },
    "autoload": {
        "psr-0": {
            "": "library/"
        }
    },
    "require-dev": {
        "zf1s/phpunit": "dev-master"
    },
    "scripts": {
        "post-install-cmd": [
            "mkdir -p logs",
            "chmod 755 logs",
            "touch logs/error.log",
            "chmod 644 logs/error.log"
        ],
        "post-update-cmd": [
            "mkdir -p logs",
            "chmod 755 logs",
            "touch logs/error.log",
            "chmod 644 logs/error.log"
        ]
    }    
}
